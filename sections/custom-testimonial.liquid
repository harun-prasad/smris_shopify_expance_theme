<!-- custom testimonials starts -->
{%- if section.settings.space_around -%}
<div class="index-section">
{%- endif -%}
  {%- unless section.settings.full_width -%}
<div class="page-width">
{%- endunless -%}
<section class="custom-testimonials">
  <div class="custom-testimonials-outer">
    <div class="custom-rating"><span class="custom-testimonials-stars">★★★★★</span></div>
    {% if section.settings.section-heading != blank %}
    <p class="custom-title-heading">{{ section.settings.section-heading }}</p>
    {% endif %}
    {% if section.settings.section-large-heading != blank %}
    <p class="custom-title-date">{{ section.settings.section-large-heading }}</p>
    {% endif %}
    {% if section.settings.description != blank %}
    <p class="custom-testmonial-description">{{ section.settings.description }}</p>
    {% endif %} </div>
  {%- unless section.settings.full_width -%}
  </div>
  {%- endunless -%}
  {%- if section.settings.space_around -%}
  </div>
  {%- endif -%} </section>
<!-- custom testimonials ends --> 
{% schema %}
{
"name": "Custom Testimonials",
"settings": [
{
"id": "section-heading",
"type": "text",
"label": "Customer Name"
},
{
"id": "section-large-heading",
"type": "text",
"label": "Posted"
},
{
"id": "description",
"type": "textarea",
"label": "Description"
}
],
"presets": [
{
"name": "Custom Testimonial",
"category": "ADVANCED LAYOUT"
}
]
}
{% endschema %}
